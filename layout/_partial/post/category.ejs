<% if (item.categories && item.categories.length){ %>
  <%
  var cats = [];
  item.categories.forEach(function(cat){
    cats.push('<a class="am-badge am-badge-success" href="' + config.root + cat.path + '">' + cat.name + '</a>');
  });
  %>
  <div class="categories">
    <i class="am-icon-star"></i> 分类:  <%- cats.join('&nbsp;') %>
  </div>
<% } %>